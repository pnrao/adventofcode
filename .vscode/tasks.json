{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run current Elixir file",
      "type": "shell",
      "command": "elixir -S mix run ${file}",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "mix: advent.run",
      "type": "shell",
      "command": "mix",
      "args": [
        "advent.run",
        "2025",
        "1"
      ],
      "isBackground": false,
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "mix: iex -S mix",
      "type": "shell",
      "command": "iex",
      "args": [
        "-S",
        "mix"
      ],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}